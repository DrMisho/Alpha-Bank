<!DOCTYPE html>
<html lang="en">

  <%- include('layouts/header'); -%>

  <body>
  
    <%- include('layouts/navbar'); -%>
  
  
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/admin-page.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1 class="tex">Register Branch</h1>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <form action="/create" method="POST" enctype="application/json">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Client Name:</label>
                            <input type="text" class="form-control" placeholder="Governorate" id="name" name="name">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Password:</label>
                            <input type="password" class="form-control" placeholder="Password" id="password" name="password">
                        </div>
                    </div>
                    <div class="control-group">
                      <div class="form-group floating-label-form-group controls">
                          <label>MAC:</label>
                          <input type="text" class="form-control" placeholder="MAC" id="MAC" name="MAC">
                      </div>
                      <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Location:</label>
                            <input type="text" class="form-control" placeholder="Location" id="location" name="location">
                        </div>
                      </div>
                       

                    </div>
                  
                    <br>
                    <div id="success"></div>
                    <button type="submit" class="btn btn-primary" id="sendMessageButton">Register</button>
                </form>
            </div>
        </div>
    </div>

  <hr>

  <%- include('layouts/footer'); -%>

  <%- include('layouts/scripts'); -%>

</body>

</html>
